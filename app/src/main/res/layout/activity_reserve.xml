<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menuu1"
    tools:context=".ReserveActivity">

    <TextView
        android:id="@+id/head1"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:fontFamily="sans-serif-black"
        android:text="\nReserve A Table"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head1"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/head1"
        app:layout_constraintVertical_bias="0.23000002">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="174dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:paddingTop="9dp"
                android:text="Enter no. of guests"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spinnerno"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@color/browser_actions_bg_grey"
                android:paddingTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="174dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:paddingTop="9dp"
                android:text="Pick Slot      "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spinnerslot"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_marginStart="16dp"
                android:background="@color/browser_actions_bg_grey"
                android:paddingTop="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="174dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:paddingTop="9dp"
                android:text="Pick date"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spinnerdate"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"

                android:background="@color/browser_actions_bg_grey"
                android:paddingTop="5dp"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/reserve"
        android:layout_width="141dp"
        android:layout_height="82dp"
        android:text="Reserve Table"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#DDED4E1D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/head1"
        app:layout_constraintVertical_bias="0.926" />

</androidx.constraintlayout.widget.ConstraintLayout></ScrollView>